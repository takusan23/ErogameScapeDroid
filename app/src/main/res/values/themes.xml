<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ErogameScapeDroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f9a825</item>
        <item name="colorPrimaryVariant">#c17900</item>
        <item name="colorOnPrimary">#ffd95a</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ErogameScapeDroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ErogameScapeDroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ErogameScapeDroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>